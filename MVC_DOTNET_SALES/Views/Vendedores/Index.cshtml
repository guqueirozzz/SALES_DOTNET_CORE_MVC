
<!-- Arquivo criado: Pasta vendedores -> Add -> View -> Razor View -->

@model IEnumerable<MVC_DOTNET_SALES.Models.Seller>

@{
    ViewData["Title"] = "Index";
}

<h2>@ViewData["Title"]</h2>

<p>
    <!-- Criação do botão de criar, com estilos-->
    <a asp-action="Create" class="btn btn-default">Novo Registro</a>
</p>

<p>Paginá de Vendedores</p>

<table class="table table-striped table-hover">
    <thead>
        <!--class = sucess ele pinta as colunas da tabela-->
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dt_aniversario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalarioBase)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            // linha = tr, coluna = td
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dt_aniversario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalarioBase)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
            </td>

        </tr>
        }
    </tbody>
</table>
